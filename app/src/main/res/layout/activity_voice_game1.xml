<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game.Voice_game1">
    <LinearLayout
        android:background="@drawable/butn_backgraound_header"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="প্রশ্ন নম্বরঃ ০"
            android:id="@+id/qus_no_id_game"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:gravity="start"
            android:textColor="@android:color/background_dark"
            />
        <TextView
            android:layout_weight="1"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="স্কোর: ০/১০"
            android:id="@+id/score_id_game"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textColor="@android:color/background_dark"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="2"
            android:id="@+id/animationView_game1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:lottie_rawRes="@raw/volume"
            app:lottie_loop="true"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/qus_id_game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="উপরের কি বলছে?"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/butn_backgraound4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="আ"
            android:gravity="center"
            android:id="@+id/button1_id_game"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <Button
            android:background="@drawable/butn_backgraound4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ক"
            android:gravity="center"
            android:id="@+id/button2_id_game"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <Button
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="পরবর্তী প্রশ্ন"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/next_qus_id_game"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_margin="0dp"
            android:background="@drawable/butn_backgraound_footer"
            />
    </LinearLayout>
</LinearLayout>